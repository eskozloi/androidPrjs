<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/MorzeText"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@drawable/my_border"
            android:gravity="center"
            android:text="Код Морзе"
            android:textColor="#70DB70"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="65dp" />

        <EditText
            android:id="@+id/UserInput"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Ваш текст"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters"
            android:textAllCaps="true"
            android:textColor="#202020"
            android:textSize="36sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Сброс"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Способ передачи:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RadioGroup
            android:id="@+id/rgS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rbS1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="Свет"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbS2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="Вибрация"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbS3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="Свет+Виб."
                android:textSize="18sp" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <TextView
            android:id="@+id/infText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Дальность передачи:"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RadioGroup
            android:id="@+id/rgD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <RadioButton
                android:id="@+id/rbD1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:checked="true"
                android:text="Дальняя"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbD2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Средняя"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbD3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Близкая"
                android:textSize="18sp" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/start"
            android:layout_width="360dp"
            android:layout_height="107dp"
            android:layout_gravity="center"
            android:drawableTint="#FFFFFF"
            android:text="СТАРТ"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>